{% if app.user %}

    <form class="mb-5" action="{{ path('app_default_contact') }}" method="post">
        <input type="hidden" name="return"
               value="{{ path(app.request.attributes.get('_route'), app.request.attributes.get('_route_params')) }}">
        <input type="hidden" name="receiver" value="{{ organization['@id'] }}">
        <input type="hidden" name="channel" value="web-form">
        <div class="card">
            <div class="card-body px-6 pt-6 pb-1">
                <div class="row">
                    <div class="form-group col-md-12 mb-6">
                        <label for="name">{{ 'topic'|trans|capitalize }}</label>
                        <input type="text" class="form-control single-date" name="topic">
                    </div>

                    <div class="form-group col-md-12 mb-6">
                        <label for="name">{{ 'description'|trans|capitalize }}</label>
                        <textarea class="form-control single-date" name="message"></textarea>
                    </div>
                </div>
                {% if contact is defined and contact is not empty %}
                    <div>
                        {% if contact.telephones is defined and contact.telephones is not empty %}
                        <span class="d-block"><i class="fas fa-phone-alt"></i> {{ contact.telephones.0.telephone }}</span>
                        {% endif %}
                        {% if contact.emails is defined and contact.emails is not empty %}
                            <span class="d-block"><i class="fas fa-at"></i> {{ contact.emails.0.email }}</span>
                        {% endif %}
                        {% if contact.adresses is defined and contact.adresses is not empty %}
                            <span class="d-block"><i class="fas fa-home"></i> {{ contact.adresses.0.street }} {{ contact.adresses.0.houseNumber }}, {{ contact.adresses.0.postalCode }} {{ contact.adresses.0.locality }}</span>
                        {% endif %}
                    </div>
                {% endif %}

            </div>
        </div>
        <div class="form-group mb-6">
            <button type="submit"
                    class="btn btn-outline-primary btn-block">{{ 'submit message'|trans|capitalize }}</button>
        </div>
    </form>

{% else %}
    <div>
        <a class="mt-2 text-center text-white" href="{{ path('app_user_idvault') }}">
            <button class="btn btn-primary btn-block">
                {{ 'login to contact organizer'|trans|capitalize }}
            </button>
        </a>
    </div>
{% endif %}
