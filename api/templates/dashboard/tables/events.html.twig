<div class="card border-light shadow-sm">
    <div class="card-header">
        <div class="row align-items-center">
            <div class="col">
                <h2 class="h5">{{ 'events'|trans|capitalize }}</h2></div>
            <div class="col text-right">
                {% if addPath is  defined %}
                    <a href="{{ path(addPath, {'id':'new' }) }}" class="btn btn-primary">{{ 'add'|trans|capitalize }}</a>
                {% else %}
                    <a href="{{ path('app_event_index') }}" class="btn btn-sm btn-secondary">{{ 'see all events'|trans|capitalize }}</a>
                {% endif %}
            </div>
        </div>
    </div>
    {% if events is  defined and events|length > 0 %}
    <div class="table-responsive">
        <table class="table align-items-center table-flush">
            <thead class="thead-light">
            <tr>
                <th scope="col">{{ 'name'|trans|capitalize }}</th>
                <th scope="col">{{ 'location'|trans|capitalize }}</th>
                <th scope="col">{{ 'attendees'|trans|capitalize }}</th>
                <th scope="col">{{ 'details'|trans|capitalize }}</th>

            </tr>
            </thead>
            <tbody>
            {% for event in events|slice(0, 10) %}
                <tr>
                    <td><span class="h6 mb-3 mb-lg0"> {{ event.name }}</span></td>
                    <td>
                        {% if event.location|default %}
                            <span class="h5 mb-3 mb-lg-0">
                                <i class="fas fa-user-tie text-secondary"></i>
                                <span class="text-small">{{ event.location }}</span>
                            </span>
                        {% else %}
                            <span class="h5 mb-3 mb-lg-0">
                                <i class="fas fa-user-tie text-small"></i>
                                <span class="ml-3">{{ 'no location found'|trans|capitalize }}</span>
                            </span>
                        {% endif %}
                    </td>
                    <td>
                        {% if event.attendees|default %}
                        <span class="h5 mb-3 mb-lg-0">
                            <i class="fas fa-user-tie text-secondary"></i>
                            <span class="ml-3">{{ event.attendees|length }}</span>
                        </span>
                        {% else %}
                            <span class="h5 mb-3 mb-lg-0">
                                <i class="fas fa-user-tie text-secondary"></i>
                                <span class="ml-3">0</span>
                            </span>
                            {% endif %}
                    </td>
                    <td>
                        <a href="{{ path('app_dashboard_event', {id: event.id}) }}" class="btn btn-primary">{{ 'view'|trans|capitalize }}</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    {% else %}
    <div class="card-body  text-center">
        <p>{{ 'no events found'|trans|capitalize }}</p>
        {% if addPath is  defined %}
        <a href="{{ path(addPath, {'id':'new' }) }}" class="btn btn-primary">{{ 'add your first event!'|trans|capitalize }}</a>
        {% else %}
        <a href="{{ path('app_event_index') }}" class="btn btn-primary">{{ 'find a event'|trans|capitalize }}</a>
        {% endif %}
    </div>
    {% endif %}
</div>
