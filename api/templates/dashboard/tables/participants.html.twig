<div class="card border-light shadow-sm">
    <div class="card-header">
        <div class="row align-items-center">
            <div class="col">
                <h2 class="h5">{{ 'participants'|trans|capitalize }}</h2>
            </div>
            <div class="col text-right">
            {% if addPath is  defined %}
                <a href="{{ path(addPath, {'id':'new' }) }}" class="btn btn-primary">{{ 'add'|trans|capitalize }}</a>
            {% else %}
                <a href="{{ path('app_participant_index') }}" class="btn btn-sm btn-secondary">{{ 'see all participants'|trans|capitalize }}</a>
            {% endif %}
            </div>
        </div>
    </div>
    {% if participants is  defined and participants|length > 0 %}
    <div class="table-responsive">
        <table class="table align-items-center table-flush">
            <thead class="thead-light">
            <tr>
                <th scope="col">{{ 'name'|trans|capitalize }}</th>
                <th scope="col">{{ 'email'|trans|capitalize }}</th>
                <th scope="col">{{ 'details'|trans|capitalize }}</th>
            </tr>
            </thead>
            <tbody>
            {% for participant in participants|slice(0, 10) %}
                <tr>
                    <td><span class="h6 mb-3 mb-lg0">{{ participant.name }}</span></td>
                    <td>
                        {% if participant.emails[0]|default  %}
                        {{ participant.emails[0].email }}
                        {% else %}
                            {{ 'no email found'|trans|capitalize }}
                            {% endif %}
                    </td>
                    <td>
                        {% if editPath is  defined %}
                            <a href="{{ path(editPath, {'id':participant.id }) }}" class="btn btn-primary">{{ 'edit'|trans|capitalize }}</a>
                        {% else %}
                            <a href="{{ path('app_dashboard_participant', {id: participant.id}) }}" class="btn btn-primary">{{ 'view'|trans|capitalize }}</a>
                        {% endif %}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    {% else %}
    <div class="card-body text-center">
        <p>{{ 'no participants found'|trans|capitalize }}</p>
        {% if addPath is  defined %}
            <a href="{{ path(addPath, {'id':'new' }) }}" class="btn btn-primary">{{ 'add your first participant!'|trans|capitalize }}</a>
        {% else %}
        <a href="{{ path('app_participant_index') }}" class="btn btn-primary">{{ 'find a participant'|trans|capitalize }}</a>
        {% endif %}
    </div>
    {% endif %}
</div>
