{% extends "base.html.twig" %}

{% block content %}
    {% include 'dashboard_menu.html.twig' %}
    <section class="pb-8 pt-5 bg-light height100vh">
        <div class="container">
            <!-- Breadcrumb -->
            <nav class="bg-transparent breadcrumb breadcrumb-2 px-0 mb-5" aria-label="breadcrumb">
                <h2 class="font-weight-normal mb-4 mb-md-0">{{ 'all'|trans|capitalize~' '~'organizations'|trans|capitalize }}</h2>
                <ul class="list-unstyled d-flex p-0 m-0">
                    <li class="breadcrumb-item"><a href="{{ path('app_default_index') }}">Home</a></li>
                    <li class="breadcrumb-item"><a href="{{ path('app_dashboard_index') }}">Dashboard</a></li>
                    <li class="breadcrumb-item active"
                        aria-current="page">{{ 'all'|trans|capitalize~' '~'organizations'|trans|capitalize }}</li>
                </ul>
            </nav>
            <!-- My Bookings -->
            <div id="my-booking_wrapper" class="dataTables_wrapper no-footer">
                <table id="my-booking" class="display nowrap table-data-default dataTable no-footer dtr-inline"
                       style="width: 100%;" role="grid">
                    <thead>
                    <tr role="row">
                        <th class="sorting_disabled" rowspan="1" colspan="1" style="width: 90px;" aria-label="Image">
                            Logo
                        </th>
                        <th class="sorting" tabindex="0" aria-controls="my-booking" rowspan="1" colspan="1"
                            style="width: 188px;"
                            aria-label="Name: activate to sort column ascending">{{ 'name'|trans|capitalize }}
                        </th>
                        <th class="sorting_disabled" rowspan="1" colspan="1" style="width: 92px;" aria-label="email">
                            {{ 'e-mail'|trans|capitalize }}
                        </th>
                        <th data-priority="2" class="sorting_disabled text-right" rowspan="1" colspan="1" style="width: 36px;" aria-label="">
                            <a href="" data-toggle="modal" data-target="#{{ type~'Modal' }}" class="btn btn-success btn-sm mr-2">{{ 'add organization'|trans|capitalize }}</a>
                        </th>
                    </tr>
                    </thead>
                    <tbody>
                    {% if items|default %}
                        {% for item in items %}
                            <tr role="row" class="odd">
                                <td tabindex="0">
                                </td>
                                <td>
                                    {{ item.name|capitalize }}
                                </td>
                                {% if item.emails.0.email|default %}
                                    <td>
                                        <a class="text-hover-primary text-muted"
                                           href="mailto:{{ item.emails.0.email }}">{{ item.emails.0.email }}</a>
                                    </td>
                                {% else %}
                                    <td style="color: lightgrey">
                                        {{ 'no e-mail'|trans|capitalize }}
                                    </td>
                                {% endif %}
                                <td class="float-right pr-2">
                                    <div class="dropdown">
                                        <a class="dropdown-toggle icon-burger-mini" href="#" role="button"
                                           id="dropdownMenuLink"
                                           data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"
                                           data-display="static">
                                        </a>

                                        <div class="dropdown-menu dropdown-menu-right"
                                             aria-labelledby="dropdownMenuLink">
                                            <a class="dropdown-item" href="#">{{ 'cancel'|trans|capitalize }}</a>
                                            <a class="dropdown-item" data-toggle="modal"
                                               data-target="#{{ type~item.id~'Modal' }}"
                                               href="#">{{ 'view'|trans|capitalize }}</a>
                                        </div>
                                    </div>
                                </td>

                            </tr>
                        {% endfor %}
                    {% else %}
                        <tr role="row" class="odd">
                            <td tabindex="0">
                                {{ 'no results found'|trans|capitalize }}
                            </td>
                            <td></td>
                            <td></td>
                            <td></td>
                        </tr>
                    {% endif %}
                    </tbody>
                </table>
            </div>
        </div>
    </section>

    {% include 'widgets/modal.html.twig' with {
        'title': 'add organization'|trans|capitalize,
        'type': type
    } %}

    {% if items|default %}
        {% for item in items %}
            {% include 'widgets/modal.html.twig' with {
                'title': item.name,
                'type': type,
                'item': item
            } %}
        {% endfor %}
    {% endif %}

{% endblock %}
