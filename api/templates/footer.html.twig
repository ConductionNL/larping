<!-- footer -->
<footer class="pt-7 pt-md-10 bg-white">
    <div class="{% if containerClass is defined %}{{ containerClass  }}{% else %}container{% endif %}">
        <div class="row">
            <div class="col-sm-7 col-xs-12">
                <a style="border:3px solid #2196F3;" href="{{ path('app_default_index') }}" class="menuzord-brand p-2 mt-3 no-text-deco d-inline-block mb-7">
                    <h2 style="color:#2196F3;" class="m-0">LARPING</h2>
                </a>
                <p class="text-muted pt-1 pb-3"><a href="{{ app.request.baseUrl }}">Larping.eu</a> {{ 'is an online platform that aims to connect and support players and organizers around LARP events. It does so by connecting players to events that they might like and support organizers with tools to host their events like a ticket system, character creation and social campaigns.'|trans }}<div class="dropdown pb-5 mb-lg-0">
                    {% set query = app.request.attributes.get('_route_params') %}
                    <a id="langsDropdown" href="#" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" class="dropdown-toggle footer-language-link pb-2">
                        {% if app.request.locale == 'en'  %}
                            <img src="/images/flags/united-kingdom.svg" width="20" height="20" alt="uk Flag" class="language-flag"> {{ 'english'|trans|capitalize }}
                        {% elseif app.request.locale == 'nl'  %}
                            <img src="/images/flags/netherlands.svg" alt="NL Flag" width="20" height="20" class="language-flag"> {{ 'dutch'|trans|capitalize }}
                        {% else %}
                            {{ 'no curent language could be established'|trans|capitalize }}
                        {% endif %}
                    </a>
                    <div aria-labelledby="langsDropdown" class="dropdown-menu dropdown-menu-center mt-0">
                        {% set query = query|merge({'_locale': 'en'}) %}
                        <a href="{{ absolute_url(path(app.request.attributes.get('_route'), query)) }}" class="dropdown-item text-gray text-sm"><img src="/images/flags/united-kingdom.svg" width="20" height="20" alt="UK Flag" class="language-flag"> {{ 'english'|trans|capitalize }}</a>
                        {% set query = query|merge({'_locale': 'nl'}) %}
                        <a href="{{ absolute_url(path(app.request.attributes.get('_route'), query)) }}" class="dropdown-item text-gray text-sm"><img src="/images/flags/netherlands.svg" alt="NL Flag" width="20" alt="NL Flag" class="language-flag"> {{ 'dutch'|trans|capitalize }}</a>
                    </div>
                </div>
                <ul class="list-unstyled text-muted">
                    <li class="mb-3">
                        <i class="fa fa-phone mr-3" aria-hidden="true"></i>
                        <a class="text-muted" href="tel:+088-657-524-332">+88 657 524 332</a>
                    </li>
                    <li class="mb-3">
                        <i class="fa fa-envelope mr-3" aria-hidden="true"></i>
                        <a class="text-muted" href="mailto:info@larping.eu">info@larping.eu</a>
                    </li>
                </ul>
            </div>

            <div class="col-sm-3 col-xs-12">
                <div class="mb-4 mt-4 mt-md-0">
                    <h2 class="h4">{{'Links'|trans|capitalize}}</h2>
                </div>
                <ul class="list-unstyled list-gray">
                    <li class="mb-3">
                        <a href="{{ path('app_default_index') }}">Home</a>
                    </li>
                    <li class="mb-3">
                        <a href="{{ path('app_event_index') }}">{{ 'events'|trans|capitalize }}</a>
                    </li>
                    <li class="mb-3">
                        <a href="{{ path('app_organization_index') }}">{{ 'organizations'|trans|capitalize }}</a>
                    </li>
                    <li class="mb-3">
                        <a href="{{ path('app_user_idvault') }}">{{ 'create account'|trans|capitalize }}</a>
                    </li>
                    <li class="mb-3">
                        <a href="{{ path('app_user_idvault') }}">{{ 'login'|trans|capitalize }}</a>
                    </li>
                </ul>
            </div>

            <div class="col-sm-2 col-xs-12">
                <div class="mb-4 mt-4 mt-md-0">
                    <h2 class="h4">{{ 'about larping.eu'|trans|capitalize }}</h2>
                </div>
                <ul class="list-unstyled list-gray">
                    <li class="mb-3">
                        <a href="#">{{ 'contact us'|trans|capitalize }}</a>
                    </li>
                    <li class="mb-3">
                        <a href="{{ path('app_default_termsandconditions') }}">{{ 'terms and conditions'|trans|capitalize }}</a>
                    </li>
                    <li class="mb-3">
                        <a href="{{ path('app_default_howitworks') }}">{{ 'how it works'|trans|capitalize }}</a>
                    </li>
                    <li class="mb-3">
                        <a href="{{ path('app_default_payment') }}">{{ 'payment'|trans|capitalize }}</a>
                    </li>
                    <li class="mb-3">
                        <a href="{{ path('app_default_pricing') }}">{{ 'pricing'|trans|capitalize }}</a>
                    </li>
                </ul>
            </div>
        </div>

        <hr>

        <div class="row pb-md-6">

            <div class="col-sm-7 col-xs-12 align-self-center order-3 order-md-0">
                <p class="copy-right mb-0 pb-4 pb-md-0">
                    Copyright &copy; 2020. All Rights Reserved by
                    <a href="https://www.conduction.nl/" target="_blank">Conduction</a>
                </p>
            </div>

            <div class="col-sm-5 col-xs-12 d-flex align-items-center">
                <div class="ml-md-auto mx-auto mx-md-0 mt-3 mb-5 my-md-0">
                    <a class="icon-sm icon-default icon-border hover-bg-primary rounded-circle ml-2" href="#facebook">
                        <i class="fab fa-facebook" aria-hidden="true"></i>
                    </a>
                    <a class="icon-sm icon-default icon-border hover-bg-primary rounded-circle ml-2" href="#twitter">
                        <i class="fab fa-twitter" aria-hidden="true"></i>
                    </a>
                    <a class="icon-sm icon-default icon-border hover-bg-primary rounded-circle ml-2" href="#pinterest">
                        <i class="fab fa-pinterest-p" aria-hidden="true"></i>
                    </a>
                    <a class="icon-sm icon-default icon-border hover-bg-primary rounded-circle ml-2" href="#linkedin">
                        <i class="fab fa-linkedin" aria-hidden="true"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
</footer>
