{% set likes = commonground_resource_list({'component':'rc','type':'likes'}, {'resource':organization['@id']})['hydra:member']|length %}

  {% if app.user|default %}
      {% set isLiked = commonground_resource_list({'component':'rc','type':'likes'}, {'resource':organization['@id'], 'author':app.user.person})['hydra:member'] %}
  {% endif %}

{% set reviews = commonground_resource_list({'component':'rc','type':'reviews'}, {'resource':organization['@id']})['hydra:member'] %}
{% extends "base.html.twig" %}
{% block content %}

<!-- ====================================
———	LISTING SINGLE HEADING
===================================== -->
<section class="py-7 pt-md-9 pb-md-8">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="mb-2 mb-lg-0">
                    <h1 class="single-listing-title">{{ organization.name }}</h1>
                    <div class="d-flex align-items-center">
                        <ul class="list-inline list-inline-rating mr-2">
                            <li class="list-inline-item">
                                <i class="fa fa-star" aria-hidden="true"></i>
                            </li>
                            <li class="list-inline-item">
                                <i class="fa fa-star" aria-hidden="true"></i>
                            </li>
                            <li class="list-inline-item">
                                <i class="fa fa-star" aria-hidden="true"></i>
                            </li>
                            <li class="list-inline-item">
                                <i class="fa fa-star" aria-hidden="true"></i>
                            </li>
                            <li class="list-inline-item">
                                <i class="fa fa-star-o" aria-hidden="true"></i>
                            </li>
                        </ul>
                        <span class="d-inline-block mr-2">({{ stats.reviews }}) {{ 'reviews'|trans|capitalize }}</span>
                        <button class="btn-like px-2" data-toggle="tooltip" data-placement="top" title="Favourite this listing">
                            <i class="fa fa-heart-o text-primary" aria-hidden="true"></i>
                            <span>{{ stats.likes }}</span>
                        </button>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 d-lg-flex justify-content-end align-items-end">
                <a href="#add-review" class="btn btn-primary">{{ 'write a review'|trans|capitalize }}</a>
            </div>
        </div>
    </div>
</section>

<!-- ====================================
———	MAIN CONTENT
===================================== -->
<section class="pt-7 pb-4 pt-md-9 pb-md-8">
    <div class="container">
        <div class="row">
            <!--======= Main =======-->
            <div class="col-md-8 col-lg-8 single-listing-content">
                <!-- About -->
                {% if organization.description|default %}
                <div class="single-listing-content mb-6">
                    <h3 class="font-weight-normal mb-6">{{ 'about'|trans|capitalize }}  {%if organization.name|default %}{{ organization.name }}{% endif %}</h3>
                        <p class="mb-6">{{ organization.description }}</p>
                </div>

                <hr>
                {% endif %}

                <!-- Catagories -->
                {% if catagories is defined and catagories is not empty %}
                <div>
                    <h3 class="font-weight-normal mb-6">{{ 'catagories'|trans|capitalize }} {{ organization.name }}</h3>
                    {%  include '/sections/catagories.html.twig' with {'catagories': catagories} %}
                </div>

                <hr>
                {% endif %}

                <!-- Organization -->
                {% if organization is defined and organization is not empty %}
                <div>
                    <h3 class="font-weight-normal mb-6">{{ 'contact details'|trans|capitalize }} {{ organization.name }}</h3>
                    {%  include '/sections/organization.html.twig' with {'organization': organization} %}
                </div>

                <hr>
                {% endif %}

                <!-- Events -->
                {% if events is defined and events is not empty %}
                <div id="gridFullwidthDiv" class="fade-in">
                    <h3 class="font-weight-normal mb-6">{{ 'events'|trans|capitalize }}</h3>
                    <div class="row">
                    {% for event in events %}
                        <div class="col-md-6" id="organization">
                        {%  include '/cards/event.html.twig' with {'item': event}  %}
                        </div>
                    {% endfor %}
                </div>

                <hr>
                {% endif %}

                <!-- Offers -->
                {% if offers is defined and offers is not empty %}
                <div id="gridFullwidthDiv" class="fade-in">
                    <h3 class="font-weight-normal mb-6">{{ 'products'|trans|capitalize }}</h3>
                    <div class="row">
                    {% for offer in offers %}
                        <div class="col-md-6" id="organization">
                        {%  include 'cards/offer.html.twig'  with {'item': offer}  %}
                        </div>
                    {% endfor %}
                    </div>
                </div>

                <hr>
                {% endif %}

                <!-- Reviews -->
                {% if reviews is defined and reviews is not empty %}
                <div>
                    <h3 class="font-weight-normal mb-6">({{ stats.reviews }}) {{ 'reviews'|trans|capitalize }}</h3>
                    {%  include '/sections/reviews.html.twig' %}
                </div>

                <hr>
                {% endif %}

                <!-- Add a review -->
                <div id="add-review">
                    <h3 class="font-weight-normal mb-6">{{ 'add a review'|trans|capitalize }}</h3>
                    {%  include '/sections/review.html.twig' %}
                </div>
            </div><!-- /.col -->
            <!--======= Sidebar =======-->
            <div class="col-md-5 col-lg-4 pl-xl-8">

            </div><!-- /.col -->
        </div> <!-- /.container -->
    </div> <!-- /.container -->
</section>

{% endblock %}
