<script>
    function updateLikeCounter(id, status) {
        let counter = document.getElementById(id);
        let likes = 0;
        if (status == 'liked') {
            // Bereken counter.innerText naar int
            likes = parseInt(counter.innerText) + 1;
        } else if (status == 'unliked'){
            likes = parseInt(counter.innerText) - 1;
        }
        counter.innerText = likes;
        console.log(status);
    }

    function likeItem(button) {
        $.ajax({
            type: "POST",
            url: "/like",
            data: {
                resource: button.value
            },
            dataType: "json",
            success: function (response) {
                let id = button.value.split('/');

                updateLikeCounter(id[7], response.data);
                console.log(response);
            }
        });
    }
</script>
