{% if resource is defined %}
    {% set  id = resource['id'] %}
    {% set  type = 'Category' %}
{% else %}
    {% set  id = 'Add' %}
    {% set  type = 'Category' %}
{% endif %}

{% extends "dashboard_administration/modals/modal.html.twig" %}

{% block body %}
    <form id="{{ type }}Form{{ id }}" method="post">
        {% if resource['id'] is defined %}
            <input type="hidden" id="id" name="id" value="{{ resource['id'] }}">{% endif %}
        {% if resource['@id'] is defined %}
            <input type="hidden" id="@id" name="@id" value="{{ resource['@id'] }}">{% endif %}

        <div class="form-group">
            <label for="name">{{ 'type'|trans|capitalize }}*</label>
            <input type="text" class="form-control" id="type" name="type"
                   {% if resource.name is defined %}value="{{ resource.name|capitalize }}"{% endif %} required>
        </div>
        <div class="form-group">
            <label for="name">{{ 'name'|trans|capitalize }}</label>
            <input type="text" class="form-control" id="name" name="name" {% if resource.name is defined %} value="{{ resource.name }}" {% endif %}>
        </div>
        <div class="form-group">
            <label for="icon">{{ 'icon'|trans|capitalize }}</label>
            <input type="text" class="form-control" id="icon" name="icon" {% if resource.icon is defined %} value="{{ resource.icon }}" {% endif %}>
        </div>
    </form>
{% endblock %}
