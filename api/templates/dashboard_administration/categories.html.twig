{% extends "base.html.twig" %}

{% block content %}

    <section class="bg-light pt-5 height100vh">
        <div class="container">
            <nav class="bg-transparent breadcrumb breadcrumb-2 px-0 mb-5" aria-label="breadcrumb">
                <h2 class="font-weight-normal mb-4 mb-md-0">{{ 'categories administration'|trans|capitalize }}</h2>
                <ul class="list-unstyled d-flex p-0 m-0">
                    <li class="breadcrumb-item"><a href="{{ path('app_default_index') }}">{{ 'home'|trans|capitalize }}</a></li>
                    <li class="breadcrumb-item"><a href="{{ path('app_dashboardadministration_index') }}">{{ 'dashboard'|trans|capitalize }}</a></li>
                    <li class="breadcrumb-item">{{ 'categories'|trans|capitalize }}</li>
                </ul>
            </nav>
            <div class="row">
                <div class="col-6">
                    <h3>{{ 'setting\'s'|capitalize }}</h3>
                    {% include 'dashboard_administration/tables/category.html.twig' with {'categories': settings} %}
                </div>
                <div class="col-6">
                    <h3>{{ 'features'|capitalize }}</h3>
                    {% include 'dashboard_administration/tables/category.html.twig' with {'categories': features} %}
                </div>
            </div>
        </div>
    </section>
{% endblock %}
