<!-- Event card -->
{% if item.totals is not defined  %}
    {% set item = item|merge({
        "totals": commonground_resource_list({'component':'rc','type':'totals'}, {'resource':item['@id']})
    }) %}
{%  endif %}
{% set eventCategories = commonground_resource_list({'component':'wrc','type':'categories'}, {'resources.resource':item['id']})['hydra:member'] %}
{% set eventOrganizations = commonground_resource(event.organization)%}
<div class="card rounded-0 card-hover-overlay">
    <a href="{{ path('app_event_event', {id: item.id}) }}">
        <div class="position-relative">
            <img class="card-img rounded-0" src="https://picsum.photos/300/200"
                 alt="Card image cap">
            <div class="card-img-overlay pt-3 pb-0">
                <a href="{{ path('app_event_event', {id: item.id}) }}#reviews">
                    <div class="d-flex align-items-center">
                        {% include 'widgets/rating.html.twig' with {'rating':item.totals.rating} %}
                        <span class="d-inline-block mr-2" style="color: white">{{ item.totals.reviews }} {{ 'reviews'|trans|capitalize }}</span>
                    </div>
                </a>
                <h3 class="text-white mb-0">
                    {{ item.name|capitalize|length > 30 ? item.name|slice(0, 30) ~ '...' : item.name }}
                </h3>
                <p class="text-white">
                    {{ 'by'|trans|capitalize }}: <a href="{{ path('app_organization_organization', {'id': commonground_resource(item.organization).id }) }}">{{ commonground_resource(item.organization).name }}</a>
                </p>
                <ul class="list-unstyled" style="color: white">
                    <li>{{ item.location }}</li>
                    <li class="far fa-calendar-alt" aria-hidden="true"></li> {{ item.startDate|date("d-m-Y H:m") }}<br>

                </ul>
            </div>
        </div>
    </a>

        <div class="card-footer bg-transparent">
            <ul class="list-unstyled d-flex mb-0 py-2">
                {% for category in eventCategories %}
                <li ><i class="{% if category.icon|default %}{{ category.icon }}{% endif %} mr-1" data-toggle="tooltip"
                        data-placement="top" title="{{ category.name }}" aria-hidden="true"></i> </li>
                {% endfor %}
                {% if features|default %}
                    {% for feature in features %}
                <li ><i class="{% if feature.icon|default %}{{ feature.icon }}{% endif %} mr-1" data-toggle="tooltip"
                           data-placement="top" title="{{ feature.name }}" aria-hidden="true"></i> </li>
                    {% endfor %}
                {% endif %}
                <li class="ml-auto">
                    <a
                        {% if app.user|default %}
                            href="#" onclick="likeItem('{{ item['id'] }}','{{ item['@id'] }}','{{ item['organization'] }}', this)"
                            data-original-title="Favourite this event"
                        {% else %}
                            href="{{ path('app_user_idvault') }}"
                            data-original-title="Login to favourite this event"
                        {% endif %}

                        liked="{% if item.totals.liked|default %}true{% else %}false{% endif %}"
                        data-toggle="tooltip"
                        data-placement="top"
                        title=""><i {% if item.totals.liked|default %} class="fas fa-heart text-primary" {% else %}class="fal fa-heart text-primary" {% endif %}
                            aria-hidden="true" id="icon_{{ item['id'] }}"></i>
                        <span id="counter_{{ item['id'] }}">{{ item.totals.likes }}</span></a>
                </li>
            </ul>
        </div>
    </div>
