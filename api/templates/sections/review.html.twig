<!-- Add Review -->
{% if app.user %}
<form method="post">
    <span class="star add-rating-default pl-0 mb-6"></span>
    <div class="form-group mb-6">
        <label for="description">{{ 'rating'|trans|capitalize }}</label>
        <br>
        <span  onmouseover="starmark(this)" onclick="starmark(this)" id="1one" style="font-size:30px;cursor:pointer;"  class="fas fa-star"></span>
        <span onmouseover="starmark(this)" onclick="starmark(this)" id="2one"  style="font-size:30px;cursor:pointer;" class="fas fa-star"></span>
        <span onmouseover="starmark(this)" onclick="starmark(this)" id="3one"  style="font-size:30px;cursor:pointer;" class="fas fa-star"></span>
        <span onmouseover="starmark(this)" onclick="starmark(this)" id="4one"  style="font-size:30px;cursor:pointer;" class="fas fa-star"></span>
        <span onmouseover="starmark(this)" onclick="starmark(this)" id="5one"  style="font-size:30px;cursor:pointer;" class="fas fa-star"></span>
        <input type="hidden" name="rating" value="" id="rating">
    </div>
    <div class="form-group mb-6">
        <label for="description">{{ 'review'|trans|capitalize }}</label>
        <textarea class="form-control" rows="6" placeholder="{{ 'enter your review'|trans|capitalize }}"name="review"></textarea>
    </div>
    <div class="form-group">
        <input type="hidden" name="@type" value="Review">
        <button type="submit" class="btn btn-primary text-uppercase"> {{ 'send review'|trans|capitalize }}</button>
    </div>
</form>
{% else %}
<div>
    <button class="btn btn-primary btn-block">
        <a class="mt-2 text-center text-white"
           href="{{ path('app_user_idvault') }}">{{ 'login to place a review'|trans|capitalize }}</a>
    </button>
</div>
{% endif %}
<script>
    var count;

    function starmark(item)
    {
        count=item.id[0];
        sessionStorage.starRating = count;
        var subid= item.id.substring(1);
        for(var i=0;i<5;i++)
        {
            if(i<count)
            {
                document.getElementById((i+1)+subid).style.color="orange";
            }
            else
            {
                document.getElementById((i+1)+subid).style.color="black";
            }
        }
        console.log(count);
        document.getElementById('rating').value = count;
    }
</script>
