{% extends "base.html.twig" %}

{% block content %}

    {% include '/dashboard_organization/menu.html.twig' %}

    <section class="bg-light pt-5 height100vh">
        <div class="container">
            <nav class="bg-transparent breadcrumb breadcrumb-2 px-0 mb-5" aria-label="breadcrumb">
                <h2 class="font-weight-normal mb-4 mb-md-0">{{ 'dashboard'|trans|capitalize }}</h2>
                <ul class="list-unstyled d-flex p-0 m-0">
                    <li class="breadcrumb-item"><a href="{{ path('app_default_index') }}">{{ 'home'|trans|capitalize }}</a></li>
                    <li class="breadcrumb-item">{{ 'dashboard'|trans|capitalize }}</li>
                </ul>
            </nav>

            <div class="row">
                <!-- Listings -->
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-header bg-white">
                            <span class="text-content">Listings</span>
                            <span class="badge badge-primary">Monthly</span>
                        </div>

                        <div class="card-body widget-content">
                            <span class="widget-content-title">21</span>
                            <div class="d-flex justify-content-between align-items-center">
                                <p class="mb-0">Compare to last month</p>
                                <span class="text-success"> 8% <i class="fa fa-level-up" aria-hidden="true"></i> </span>
                            </div>
                            <a href="my-listings.html" class="btn btn-link">All listing</a>
                        </div>
                    </div>
                </div>

                <!-- Visits -->
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-header bg-white">
                            <span class="text-content">Review Recived</span>
                            <span class="badge badge-primary">Weekly</span>
                        </div>

                        <div class="card-body widget-content">
                            <span class="widget-content-title">203</span>
                            <div class="d-flex justify-content-between align-items-center">
                                <p class="mb-0">Audience</p>
                                <span class="text-success"> 12% <i class="fa fa-level-up" aria-hidden="true"></i> </span>
                            </div>
                            <a href="admin-reviews.html" class="btn btn-link">All Reviews</a>
                        </div>
                    </div>
                </div><!-- /.col -->

                <!-- Booking -->
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-header bg-white">
                            <span class="text-content">Booking</span>
                            <span class="badge badge-primary">Daily</span>
                        </div>

                        <div class="card-body widget-content">
                            <span class="widget-content-title">87</span>
                            <div class="d-flex justify-content-between align-items-center">
                                <p class="mb-0">Compare to yesterday</p>
                                <span class="text-success"> 9% <i class="fa fa-level-up" aria-hidden="true"></i> </span>
                            </div>
                            <a href="admin-booking-requests.html" class="btn btn-link">All Booking</a>
                        </div>
                    </div>
                </div><!-- /.col -->



                <!-- Visits -->
                <div class="col-sm-4">
                    <div class="card">
                        <div class="card-header bg-white">
                            <span class="text-content">Visits</span>
                            <span class="badge badge-primary">Monthly</span>
                        </div>

                        <div class="card-body widget-content">
                            <span class="widget-content-title">24,103</span>
                            <div class="d-flex justify-content-between align-items-center">
                                <p class="mb-0">Compare to last week</p>
                                <span class="text-success"> 13% <i class="fa fa-level-up" aria-hidden="true"></i> </span>
                            </div>
                            <a href="#" class="btn btn-link">All listing</a>
                        </div>
                    </div>
                </div>

                <!-- Growth -->
                <div class="col-sm-4">
                    <div class="card">
                        <div class="card-header bg-white">
                            <span class="text-content">Growth</span>
                            <span class="badge badge-primary">Weekly</span>
                        </div>

                        <div class="card-body widget-content">
                            <span class="widget-content-title">+15%</span>
                            <div class="d-flex justify-content-between align-items-center">
                                <p class="mb-0">Compare to last week</p>
                                <span class="text-danger"> 5% <i class="fa fa-level-up" aria-hidden="true"></i> </span>
                            </div>
                            <a href="#" class="btn btn-link">See Growth</a>
                        </div>
                    </div>
                </div>

                <!-- Bookings -->
                <div class="col-sm-4">
                    <div class="card">
                        <div class="card-header bg-white">
                            <span class="text-content">Bookings</span>
                            <span class="badge badge-primary">Daily</span>
                        </div>

                        <div class="card-body widget-content">
                            <span class="widget-content-title">1,443</span>
                            <div class="d-flex justify-content-between align-items-center">
                                <p class="mb-0">Compare to yesterday</p>
                                <span class="text-success"> 6% <i class="fa fa-level-up" aria-hidden="true"></i> </span>
                            </div>
                            <a href="#" class="btn btn-link">All Bookings</a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Orders -->
            <div class="card">
                <div class="card-header bg-white">
                    <span class="text-content">Orders</span>
                    <form class="ml-auto d-flex align-items-center">
                        <div class="form-group mb-0 mr-2">
                            <input type="text" class="form-control double-date form-control-sm">
                        </div>
                        <div class="btn-group" role="group" aria-label="Basic example">
                            <button type="button" class="btn btn-outline-secondary btn-sm active">Left</button>
                            <button type="button" class="btn btn-outline-secondary btn-sm">Middle</button>
                            <button type="button" class="btn btn-outline-secondary btn-sm">Right</button>
                        </div>
                    </form>
                </div>

                <div class="card-body widget-content">
                    <div class="row">
                        <div class="col-md-4 col-lg-3">
                            <div class="mb-5">
                                <span class="widget-content-title">2,450</span>
                                <p>Total Orders</p>
                            </div>
                            <div class="mb-5">
                                <span class="widget-content-title">$50,500</span>
                                <p>Total Payments</p>
                            </div>
                        </div>
                        <div class="col-md-8 col-lg-9">
                            <div class="flot-chart">
                                <div class="flot-chart-content" id="flot-dashboard-chart"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            </div><!-- /.row -->
        </div>
    </section>
{% endblock %}
