
{% if events is  defined and events|length > 0 %}
<table id="events" class="display nowrap table" style="width:100%">
    <thead>
    <tr>
        <th>{{ 'name'|trans|capitalize }}</th>
        <th>{{ 'date'|trans|capitalize }}</th>
        <th>{{ 'location'|trans|capitalize }}</th>
        <th>{{ 'tickets'|trans|capitalize }}</th>
        <th>{{ 'sales'|trans|capitalize }}</th>
        <th>Status</th>
        <th><button type="button" class="btn btn-success btn-sm" data-toggle="modal" data-target="#EventModalAdd">{{ 'add'|trans|capitalize }}</button></th>
    </tr>
    </thead>
    <tbody>
    {% for event in events %}
    <tr>
        <td class="text-capitalize">
            <a class="text-hover-primary text-muted" href="listing-rental.html">{{ event.name }}</a>
        </td>
        <td>
            <span class="d-block">{{ event.startDate|date }} /</span>
            <span class="d-block">{{ event.endDate|date }}</span>
        </td>
        <td class="text-capitalize">{{ event.location }}</td>

        <td>
            <span class="d-block ">80 Available</span>
            <span class="d-block ">120 Sold</span>
        </td>
        <td class="text-capitalize">
           â‚¬ 100
        </td>
        <td>
            <span class="badge badge-warning px-2 py-1">{{event.status}}</span>
        </td>
        <td>
            <div class="dropdown">
                <a class="dropdown-toggle icon-burger-mini" href="#" role="button" id="dropdownMenuLink"
                   data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" data-display="static">
                </a>

                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuLink">
                    <a class="dropdown-item" href="#" data-toggle="modal" data-target="#EventModal{{ event.id }}">{{ 'edit'|trans|capitalize }}</a>
                    <a class="dropdown-item" href="#">Participants</a>
                    <a class="dropdown-item" href="{{ path('app_dashboardorganization_event', {id: event.id}) }}">{{ 'config'|trans|capitalize }}</a>
                    <a class="dropdown-item" href="#">Cancel</a>
                    <a class="dropdown-item" href="{{ path('app_event_event', {id: event.id}) }}" target="_blank">{{ 'view'|trans|capitalize }}</a>
                </div>
            </div>
        </td>
    </tr>
    {% endfor %}
    </tbody>
</table>
{% else %}
<div class="card border-light shadow-sm">
    <div class="card-body text-center">
        <p>{{ 'no events found'|trans|capitalize }}</p>
        <a href="#" class="btn btn-primary" data-toggle="modal" data-target="#EventModalAdd">{{ 'add your first event'|trans|capitalize }}!</a>
    </div>
</div>
{% endif %}

{% include 'dashboard_organization/modals/event.html.twig' %}

{% for event in events %}
    {% include 'dashboard_organization/modals/event.html.twig' with {'resource': event} %}
{% endfor %}


