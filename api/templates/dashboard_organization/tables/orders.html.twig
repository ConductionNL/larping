
{% if orders is  defined and orders|length > 0 %}
    <table id="events" class="display nowrap table" style="width:100%">
        <thead>
        <tr>
            <th>{{ 'refence'|trans|capitalize }}</th>
            <th>Status</th>
            <th><button type="button" class="btn btn-success btn-sm" data-toggle="modal" data-target="#OrderModalAdd">{{ 'add'|trans|capitalize }}</button></th>
        </tr>
        </thead>
        <tbody>
        {% for order in orders %}
            <tr>
                <td class="text-capitalize">
                    <a class="text-hover-primary text-muted" href="listing-rental.html">{{ order.reference }}</a>
                </td>
                <td>
                    <span class="badge badge-warning px-2 py-1">Pending</span>
                </td>
                <td>
                    <div class="dropdown">
                        <a class="dropdown-toggle icon-burger-mini" href="#" role="button" id="dropdownMenuLink"
                           data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" data-display="static">
                        </a>

                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuLink">
                            <a class="dropdown-item" href="#" data-toggle="modal" data-target="#OrderModal{{ order.id }}">Edit</a>
                        </div>
                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% else %}
    <div class="card border-light shadow-sm">
        <div class="card-body text-center">
            <p>{{ 'no orders found'|trans|capitalize }}</p>
            <a href="#" class="btn btn-primary" data-toggle="modal" data-target="#OrderModalAdd">{{ 'add your first order'|trans|capitalize }}!</a>
        </div>
    </div>
{% endif %}

{% include 'dashboard_organization/modals/order.html.twig' %}

{% for order in orders %}
    {% include 'dashboard_organization/modals/order.html.twig' with {'resource': order} %}
{% endfor %}


