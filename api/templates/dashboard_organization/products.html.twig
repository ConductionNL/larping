{% extends "base.html.twig" %}

{% block content %}

    {% include 'dashboard_organization/menu.html.twig' %}

    <section class="pb-8 pt-5 bg-light height100vh">
        <div class="container">
            <!-- Breadcrumb -->
            <nav class="bg-transparent breadcrumb breadcrumb-2 px-0 mb-5" aria-label="breadcrumb">
                <h2 class="font-weight-normal mb-4 mb-md-0">{{ 'products'|trans|capitalize }}</h2>
                <ul class="list-unstyled d-flex p-0 m-0">
                    <li class="breadcrumb-item"><a href="{{ path('app_default_index') }}">{{ 'home'|trans|capitalize }}</a></li>
                    <li class="breadcrumb-item"><a href="{{ path('app_dashboard_index') }}">{{ 'dashboard'|trans|capitalize }}</a></li>
                    <li class="breadcrumb-item active"
                        aria-current="page">{{ 'products'|trans|capitalize }}</li>
                </ul>
            </nav>

            <!-- Products -->
            {%  include 'dashboard_organization/tables/products.html.twig' with {'id': 'products'} %}
        </div>
    </section>
<style>
    .hideOffer {
        display: none;
    }
    .tab button:hover {
        background-color: #ddd;
    }

    .tabcontent {
        padding: 6px 12px;
        border: 1px solid #ccc;
        border-top: none;
    }
</style>
    <script>
        function swichtOffers() {
            $('.hideOffer').show();
            $('.hideProduct').hide();
        }

        function switchProducts() {
            $('.hideProduct').show();
            $('.hideOffer').hide();
        }
    </script>

{% endblock %}
