{% extends "base.html.twig" %}

{% block content %}

    {% include 'dashboard_organization/menu.html.twig' %}

    <section class="pb-8 pt-5 bg-light height100vh">
        <div class="container">
            <!-- Breadcrumb -->
            <nav class="bg-transparent breadcrumb breadcrumb-2 px-0 mb-5" aria-label="breadcrumb">
                <h2 class="font-weight-normal mb-4 mb-md-0">{{ 'balance'|trans|capitalize }}</h2>
                <ul class="list-unstyled d-flex p-0 m-0">
                    <li class="breadcrumb-item"><a href="{{ path('app_default_index') }}">{{ 'home'|trans|capitalize }}</a></li>
                    <li class="breadcrumb-item"><a href="{{ path('app_dashboardorganization_index') }}">{{ 'dashboard'|trans|capitalize }}</a></li>
                    <li class="breadcrumb-item active"
                        aria-current="page">{{ 'balance'|trans|capitalize }}</li>
                </ul>
            </nav>
            <div class="row">
                <!-- Users -->
                <div class="col-lg-8">
                    <div class="card border-light shadow-sm">
                        <div class="card-header">
                            <div class="row align-items-center">
                                <div class="col">
                                    <h2 class="h5">{{ 'Debit'|trans|capitalize }}</h2></div>
                            </div>
                        </div>
                        {%  include 'dashboard_organization/tables/acounts.html.twig' %}
                    </div>
                </div>

                <!-- Groups -->
                <div class="col-lg-4">
                    <div class="card border-light shadow-sm">
                        <div class="card-header">
                            <div class="row align-items-center">
                                <div class="col">
                                    <h2 class="h5">{{ 'Credit'|trans|capitalize }}</h2></div>
                            </div>
                        </div>
                        {% include 'dashboard_organization/tables/acounts.html.twig' %}
                    </div>
                </div>
            </div>
        </div>
    </section>

{% endblock %}
