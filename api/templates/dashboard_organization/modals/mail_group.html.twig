<!--Send mail to group modal -->
<div class="modal fade" id="MailModal{{ resource.id }}" tabindex="-1" role="dialog"
     aria-labelledby="MailModal{{ resource.id }}" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">{{ 'send email to'|trans|capitalize }} {{ resource.name }}</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
                <!-- Form -->
                <form method="post" action="" enctype="multipart/form-data">
                    <div class="modal-body">
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                        <input type="hidden" id="id" name="id" value="{{ resource.id }}">
                        <!-- Subject -->
                        <div class="form-group">
                            <label for="title">{{ 'subject'|trans|capitalize }} <span
                                    style="color: red;"><strong>*</strong></span></label>
                            <input type="text" class="form-control" id="title" name="title"
                                   placeholder="{{ 'subject'|trans|capitalize }}" required>
                        </div>
                        <!-- Content -->
                        <div class="form-group">
                            <label for="description">{{ 'content'|trans|capitalize }} <span
                                    style="color: red;"><strong>*</strong></span></label>
                            <textarea class="form-control" rows="4" name="description" id="description"></textarea>
                        </div>
                    </div>
                    <!-- Submit -->
                    <div class="modal-footer">
                        <button type="submit" name="mailGroup" value="true"
                                class="btn btn-primary mr-1 mt-5">{{ 'send'|trans|capitalize }}</button>
                    </div>
                </form>
        </div>
    </div>
</div>

