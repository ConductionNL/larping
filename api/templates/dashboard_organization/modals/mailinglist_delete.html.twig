<!--Delte mailing list modal -->
<div class="modal fade" id="MailinglistModalDelete{{ resource.id }}" tabindex="-1" role="dialog" aria-labelledby="MailinglistModalDelete{{ resource.id }}" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">{{ 'Warning! You are about to delete'|trans|capitalize }}</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form action="{{ path('app_dashboardorganization_mailinglists') }}" method="post">
                <div class="modal-body">
                    <input type="hidden" id="id" name="id" value="{{ resource.id }}">

                    <h4>{{ resource.name }}</h4>
                    <p>{{ 'this is an irreversible action, meaning that it cannot be undone. Are you sure?'|trans|capitalize }}</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary mr-1 mt-5" data-dismiss="modal">{{ 'no, cancel'|trans|capitalize }}</button>
                    <button type="submit" name="DeleteList" value="true" class="btn btn-danger mr-1 mt-5">{{ 'yes, delete'|trans|capitalize }}</button>
                </div>
            </form>
        </div>
    </div>
</div>
