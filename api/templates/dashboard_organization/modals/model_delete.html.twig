<!-- Modal -->
<div class="modal fade" id="{{ type }}ModalDelete{{ id }}" tabindex="-1" role="dialog" aria-labelledby="{{ type }}ModalDelete{{ id }}" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">{{ 'Warning! You are about to delete'|trans|capitalize }}</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <h4>{{ name }}</h4>
                <p>{{ 'this is an irreversible action, meaning that it cannot be undone. Are you sure?'|trans|capitalize }}</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">{{ 'no, cancel'|trans|capitalize }}</button>
                <a type="button" class="btn btn-danger" href="{{ url }}">{{ 'yes, delete'|trans|capitalize }}</a>
            </div>
        </div>
    </div>
</div>
