<!--Send mail to mailing list modal -->
<div class="modal fade" id="MailingModal{{ resource.id }}" tabindex="-1" role="dialog" aria-labelledby="MailingModal{{ resource.id }}" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Send Email</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form action="{{ path('app_dashboardorganization_mailinglists') }}" method="post">
                    <input type="hidden" id="id" name="id" value="{{ resource.id }}">

                    <div class="form-group">
                        <label for="title">{{ 'title'|trans|capitalize }}*</label>
                        <input type="text" class="form-control" id="title" name="title" required>
                    </div>

{#                    <div class="summernote" id="html" name="html">summernote 1</div>#}

                    <button type="submit" name="MailToList" value="true" class="btn btn-primary mr-1">{{ 'send'|trans|capitalize }}</button>
                </form>
            </div>
        </div>
    </div>
</div>
