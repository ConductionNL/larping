<!-- Modal -->
<div class="modal {% if modalClass is defined %}{{ modalClass }}{% endif%} fade" id="{{ type }}Modal{{ id }}" tabindex="-1" role="dialog" aria-labelledby="{{ type }}Modal{{ id }}" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">{{ type|trans|capitalize }}</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                {% block body %}

                {% endblock %}
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">{{ 'cancel'|trans|capitalize }}</button>
                <button type="button" class="btn btn-primary"
                        onclick="javascript:document.getElementById('{{ type }}Form{{ id }}').submit();"
                >{{ 'save'|trans|capitalize }}</button>
            </div>
        </div>
    </div>
</div>
