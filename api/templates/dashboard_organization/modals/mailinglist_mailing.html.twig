<!--Send mail to mailing list modal -->
<div class="modal fade" id="MailinglistModalMailing{{ resource.id }}" tabindex="-1" role="dialog" aria-labelledby="MailinglistModalMailing{{ resource.id }}" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">{{ 'send email to'|trans|capitalize }} {{ resource.name }} {{ 'mailing list'|trans }}</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form action="{{ path('app_dashboardorganization_mailinglists') }}" method="post">
                <div class="modal-body">
                    <input type="hidden" id="id" name="id" value="{{ resource.id }}">

                    <div class="form-group">
                        <label for="title">{{ 'subject'|trans|capitalize }} <span style="color: red;"><strong>*</strong></span></label>
                        <input type="text" class="form-control" id="title" name="title" placeholder="{{ 'subject'|trans|capitalize }}" required>
                    </div>

                    <div class="form-group">
                        <label for="summernote">{{ 'content'|trans|capitalize }} <span style="color: red;"><strong>*</strong></span></label>
                        <textarea class="summernote" name="html" id="summernote"></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" name="MailToList" value="true" class="btn btn-primary mr-1 mt-5">{{ 'send'|trans|capitalize }}</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    $('#summernote').summernote({
        placeholder: '{{ 'content'|trans|capitalize }}',
        tabsize: 2,
        height: 300
    });
</script>
