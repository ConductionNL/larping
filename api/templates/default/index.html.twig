{% extends "base.html.twig" %}

{% block content %}

    <!-- MAP SECTION -->
    <div class="clearfix p-0">
        <div id="map-canvas"></div>
    </div>

    <!-- ====================================
    ———	LOCATION SEARCH ONE
    ===================================== -->
    <div class="py-7 py-md-0 bg-light">
        <div class="container position-relative px-md-0">
            <div class="search-box">
                <form method="GET" action="{{ path('app_event_index') }}">
                    <div class="form-group mb-md-0">
                        <input type="text" class="form-control" id="search" name="search"
                               placeholder="{{ 'enter your keywords'|trans|capitalize }}" >
                    </div>
                    <div class="select-default">
                        <select class="select-location" id="categories[]" name="categories[]">
                            <option>{{ 'all regions'|trans }}</option>
                            {% if regions|default %}
                            {% for region in regions %}
                            <option value="{{ region.id }}">{{ region.name }}</option>
                            {% endfor %}
                            {% endif %}
                        </select>
                    </div>
                    <div class="select-default">
                        <select class="select-location" id="categories[]" name="categories[]">
                            <option>{{ 'all'|trans|capitalize~' '~'categories'|trans }}</option>
                            {% if settings|default %}
                                {% for category in settings %}
                                    <option value="{{ category.id }}">{{ category.name|capitalize }}</option>
                                {% endfor %}
                            {% endif %}
                        </select>
                    </div>
                    <button type="submit" class="btn btn-primary">
                        {{ 'search'|trans|capitalize }}
                    </button>
                </form>
            </div>
        </div>
    </div>

    <!-- ====================================
    ———	BROWSER CATEGORI AREA
    ===================================== -->
    <section class="pt-md-10 sec-pb-70 pb-6 bg-light">
        <div class="container">
            <div class="section-title pt-md-8">
                <h2>{{ 'browse by categories'|trans|capitalize }}</h2>
                {#                <p> {{ 'explore and connect with great local organizations'|trans|capitalize }}</p>#}
            </div>
            <div class="row">
                {% if settings|default %}
                    {% for category in settings %}
                        <div class="col-md-4 col-lg-3 col-xs-12">
                            {% include 'cards/category.html.twig' with {
                                'item': category
                            } %}
                        </div>
                    {% endfor %}
                {% endif %}
            </div>
        </div>
    </section>

    <!-- ====================================
    ———	LISTING
    ===================================== -->
    <section class="pt-7 pt-md-10">
        <div class="container">
            <div class="section-title">
                <h2>{{ 'upcoming events'|trans|capitalize }}</h2>
                <p>{{ 'what should be next on your calander'|trans|capitalize }}</p>
            </div>
            <div class="w-50 h-50" style="margin-left: 25%">
                <div id="carouselEventControls" class="carousel slide" data-ride="carousel">
                    <div class="carousel-inner">
                        {% for event in events %}
                            <div class="carousel-item {% if loop.first %} active{% endif %}">
                                {% include 'cards/event.html.twig' with {'item': event} %}
                            </div>
                        {% endfor %}
                    </div>
                    <a class="carousel-control-prev" href="#carouselEventControls" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">{{'previous'|trans|capitalize}}</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselEventControls" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">{{'next'}}</span>
                    </a>
                </div>
            </div>
            <div class="text-center pt-5">
                <a href="{{ path('app_event_index') }}"
                   class="btn btn-primary">{{ 'see all events'|trans|capitalize }}</a>
            </div>
        </div>
    </section>

    <!-- ====================================
    ———	SERVICES SECTION
    ===================================== -->
    <section class="py-7 py-md-10">
        <div class="container">
            <div class="border rounded pt-7">
                <div class="row">

                    <div class="col-sm-4 col-xs-12">
                        <div class="card border-0 text-center">
                            <div class="icon-lg m-auto rounded-circle">
                                <i class="icon-listy icon-key text-primary"></i>
                            </div>
                            <div class="card-body">
                                <h2 class="h4 font-weight-normal mb-3">{{ "secure trading"|trans|capitalize }}</h2>
                                <p>Lorem ipsum dolor sit amet consectetur adipisicing elit sed eiusmod</p>
                            </div>
                        </div>
                    </div>

                    <div class="col-sm-4 col-xs-12">
                        <div class="card border-0 text-center">
                            <div class="icon-lg m-auto rounded-circle">
                                <i class="icon-listy icon-wreath text-primary"></i>
                            </div>
                            <div class="card-body">
                                <h2 class="h4 font-weight-normal mb-3">{{ "24/7 hours support"|trans|capitalize }}</h2>
                                <p>Lorem ipsum dolor sit amet consectetur adipisicing elit sed eiusmod</p>
                            </div>
                        </div>
                    </div>

                    <div class="col-sm-4 col-xs-12">
                        <div class="card border-0 text-center">
                            <div class="icon-lg m-auto rounded-circle">
                                <i class="icon-listy icon-tag3 text-primary"></i>
                            </div>
                            <div class="card-body">
                                <h2 class="h4 font-weight-normal mb-3">{{ "easy trading"|trans|capitalize }}</h2>
                                <p>Lorem ipsum dolor sit amet consectetur adipisicing elit sed eiusmod</p>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </section>

{% endblock %}
